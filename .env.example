# Telegram Bot配置
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# 允许使用的用户ID（逗号分隔，留空则允许所有人）
ALLOWED_USER_IDS=

# HTX (火币) API配置
HTX_ACCESS_KEY=your_htx_access_key_here
HTX_SECRET_KEY=your_htx_secret_key_here

# API基础URL
HTX_REST_URL=https://api.huobi.pro
HTX_WS_URL=wss://api.huobi.pro/ws/v2

# 数据库配置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# 网格交易默认配置
GRID_DEFAULT_COUNT=10
GRID_DEFAULT_AMOUNT=0.001

# 监控配置
MONITOR_INTERVAL=60  # 秒
PRICE_ALERT_THRESHOLD=0.05  # 5%

# 时区配置
TIMEZONE=Asia/Shanghai
